<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView_Main_Logo"
        android:src="@drawable/desafio_latam_logo"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="32dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView_Main_Title"
        android:text="@string/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/imageView_Main_Logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imageView_Main_LoadedImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="18dp"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView_Main_Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_Main_LoadImage"
        android:text="@string/load_image"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/imageView_Main_LoadedImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_Main_Next"/>

    <Button
        android:id="@+id/button_Main_Next"
        android:text="@string/next"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/imageView_Main_LoadedImage"
        app:layout_constraintStart_toEndOf="@id/button_Main_LoadImage"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>